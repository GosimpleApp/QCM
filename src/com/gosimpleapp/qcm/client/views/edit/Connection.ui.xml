<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:LayoutPanel>
	<g:layer >
		<g:HorizontalPanel  spacing="5">
			<g:Cell verticalAlignment="ALIGN_MIDDLE">
				<g:Label>Mail</g:Label>
			</g:Cell>
			<g:Cell verticalAlignment="ALIGN_MIDDLE">
				<g:TextBox ui:field="emailTextBox" ></g:TextBox>
			</g:Cell>
			
			<g:Cell verticalAlignment="ALIGN_MIDDLE">
				<g:Label ui:field="passLabel">Pass</g:Label>
			</g:Cell>
			<g:Cell verticalAlignment="ALIGN_MIDDLE">
				<g:PasswordTextBox ui:field="passwordPasswordTextBox" />
			</g:Cell>
			<g:Cell verticalAlignment="ALIGN_MIDDLE">
				<g:Button ui:field="okButton" text="Ok" />
			</g:Cell>
			
	</g:HorizontalPanel>
	</g:layer>
	</g:LayoutPanel>

</ui:UiBinder> 